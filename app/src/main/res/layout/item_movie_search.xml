<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

    <ImageView
            tools:src="@color/colorDarkGreen"
            android:id="@+id/item_movie_search_banner_imageview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="100dp"
            android:layout_height="120dp"/>

    <TextView
            android:id="@+id/item_movie_search_title_textview"
            android:layout_width="wrap_content"
            android:textSize="16dp"

            android:textColor="@color/colorDarkBlue"
            tools:text="A era do gelo"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_movie_search_banner_imageview"
            app:layout_constraintEnd_toStartOf="@+id/item_movie_separator_textview"
            app:layout_constraintVertical_bias="0.494"/>

    <TextView
            android:id="@+id/item_movie_separator_textview"
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:textStyle="italic|bold"
            android:textColor="@color/colorLightGreen"
            android:text="@string/generic_separator"
            android:layout_height="13dp"
            app:layout_constraintTop_toTopOf="@+id/item_movie_search_title_textview"
            app:layout_constraintBottom_toBottomOf="@+id/item_movie_search_title_textview"
            app:layout_constraintStart_toEndOf="@+id/item_movie_search_title_textview"
            app:layout_constraintEnd_toStartOf="@+id/item_movie_search_release_year_textview"/>

    <TextView
            android:id="@+id/item_movie_search_release_year_textview"
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:textStyle="italic|bold"
            android:textColor="@color/colorLightGreen"
            tools:text="(1997)"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/item_movie_search_title_textview"
            app:layout_constraintBottom_toBottomOf="@+id/item_movie_search_title_textview"
            app:layout_constraintStart_toEndOf="@+id/item_movie_separator_textview"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>