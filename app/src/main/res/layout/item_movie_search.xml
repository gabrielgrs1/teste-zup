<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

    <ImageView
            tools:src="@color/colorDarkGreen"
            android:id="@+id/item_movie_search_banner_imageview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="100dp"
            android:layout_height="120dp" android:contentDescription="@string/generic_banner_content_description"/>

    <TextView
            android:id="@+id/item_movie_search_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorDarkBlue"
            tools:text="A era do gelo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/item_movie_search_release_year_textview"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_movie_search_banner_imageview"/>

    <TextView
            android:id="@+id/item_movie_search_release_year_textview"
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="italic|bold"
            android:textColor="@color/colorLightGreen"
            tools:text="Ano lancamento (1997)"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>