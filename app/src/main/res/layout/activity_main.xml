<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:background="@color/colorLightGreen"
            app:titleTextColor="@color/colorDarkBlue"
            app:subtitleTextColor="@color/colorDarkBlue"
            app:title="Zup Teste"
            app:subtitle="Meus Filmes"
            android:padding="1dp"
            android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_movies_recyclerview"
            android:layout_width="0dp"
            tools:itemCount="10"
            tools:listitem="@layout/item_movie_main"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>